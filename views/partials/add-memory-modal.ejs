<div id="addMemoryModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Add New Memory</h2>
        <form id="addMemoryForm">
            <input type="file" id="memoryImage" accept="image/*" required>
            <input type="text" id="memoryTitle" placeholder="Title" required>
            <textarea id="memoryDescription" placeholder="Description" required></textarea>
            <button type="submit">Save Memory</button>
        </form>
    </div>
</div> 